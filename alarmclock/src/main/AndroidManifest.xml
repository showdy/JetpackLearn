<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.showdy.alarm">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.VIBRATE"/>

    <!--    传感器-->
    <uses-permission android:name="android.permission.BODY_SENSORS" />

    <!--    android 10 以上获取步数-->
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />

    <!--    android 6.0以上悬浮窗-->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <!--    android7.0以上通知栏权限-->
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <!--    微光模式-->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <application
        android:name="App"
        android:allowBackup="true"
        android:icon="@mipmap/gyenno_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:theme="@style/AppTheme">

        <!--        <uses-library android:name="org.apache.http.legacy" android:required="false" />-->

        <activity
            android:name=".activity.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.MainActivity"
            android:exported="false"
            android:launchMode="singleTask" />

        <activity android:name=".activity.MedClockActivity"
            android:exported="false"/>
        <activity android:name=".activity.StatusListActivity" />
        <activity android:name=".activity.StatusClockActivity" />


        <receiver android:name=".receiver.RebootCompleteReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <receiver android:name=".receiver.ClockBroadcastReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.gyenno.watch.clock"/>
            </intent-filter>
        </receiver>



        <service
            android:name=".service.WatchService"
            android:exported="false" />

    </application>




</manifest>